        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.Fury" >
        <activity
            android:name="com.example.fury.Shell"
            android:clearTaskOnLaunch="true"
            android:launchMode="singleTask"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.fury.MainActivity"
            android:clearTaskOnLaunch="true"
            android:launchMode="singleTask"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.example.fury.Preloading"
            android:clearTaskOnLaunch="true"
            android:launchMode="singleTask"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.example.fury.Kitchen"
            android:clearTaskOnLaunch="true"
            android:launchMode="singleTask"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.example.fury.Fridge"
            android:clearTaskOnLaunch="true"
            android:launchMode="singleTask"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.example.fury.Bath"
            android:clearTaskOnLaunch="true"
            android:launchMode="singleTask"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.example.fury.SleepRoom"
            android:clearTaskOnLaunch="true"
            android:launchMode="singleTask"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.example.fury.FlappyBird"
            android:clearTaskOnLaunch="true"
            android:launchMode="singleTask"
            android:screenOrientation="landscape" />
    </application>

</manifest>